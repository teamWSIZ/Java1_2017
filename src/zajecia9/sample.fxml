<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainbox" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="zajecia9.Controller">

    <MenuBar fx:id="menuBar">
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem text="---" />
                    <MenuItem text="Otwórz" />
                    <MenuItem text="---" />
                </items>
            </Menu>
            <Menu text="Edit">
                <items>
                    <MenuItem text="Cut" />
                    <MenuItem text="Copy" />
                    <SeparatorMenuItem />
                    <MenuItem text="Paste" />
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <HBox>
        <VBox alignment="TOP_LEFT" prefWidth="250">
            <ComboBox fx:id="produkty">
            </ComboBox>

         <GridPane>
            <children>
                <Button fx:id="kiwiButton" onAction="#selectKiwi"
                        GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Button fx:id="appleButton" onAction="#selectKiwi"
                        GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Button fx:id="pearButton" onAction="#selectPear"
                        GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Button fx:id="bananaButton"
                        GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </children>
         </GridPane>
            
        </VBox>
        <VBox>
            <HBox alignment="BASELINE_CENTER">
                <!--kwoty wrzucane-->
                <Button onAction="#insertFive"> 5</Button>
                <Button onAction="#insertTen"> 10</Button>
                <Button> 20</Button>
                <Button> 50</Button>
                <Button> 100</Button>
            </HBox>
            <HBox alignment="BASELINE_CENTER">
                <Button onAction="#wybierz"> Wybierz produkt </Button>
                <Button onAction="#kup"> Kup </Button>
                <Button onAction="#czysc"> Czyść ekran</Button>
            </HBox>
            <HBox>
                <Label>Wpłacono:</Label>
                <Label fx:id="wplataLabel">0</Label>
                <Label>     Cena produktu:</Label>
                <Label fx:id="cenaLabel">0</Label>
            </HBox>

            <TextArea fx:id="ekran" prefHeight="400" prefWidth="400">

            </TextArea>

        </VBox>
    </HBox>




</VBox>
